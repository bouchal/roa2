{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "esnext",
      "DOM"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src"
  ]
}
